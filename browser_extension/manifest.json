{
  "manifest_version": 2,
  "name": "Knowledge Engine Saver",
  "version": "1.1",
  "description": "Save bookmarks to your Knowledge Engine",
  "permissions": ["bookmarks", "tabs", "notifications", "storage", "https://your-api-domain.com/"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
